---
import RichText from "../components/RichText.astro";
import { SBRichText } from "../types";

interface Props {
  blok: {
    headline: SBRichText;
    text: SBRichText;
  };
}

const { blok } = Astro.props;
const { headline, text } = blok;
---

<section class="flex flex-col items-center px-6">
  <div
    class="flex-1 flex flex-col md:flex-row gap-6 md:gap-20 max-w-container py-8 md: py-16 items-center justify-center"
  >
    <div class="flex flex-col gap-4">
      <RichText text={headline} className={{ heading: "!text-5xl" }} />
      <div class="md:columns-2 text-justify">
        <RichText
          text={text}
          className={{ paragraph: "mb-3 font-normal text-xl text-brand-tertiary-default" }}
        />
      </div>
    </div>
  </div>
</section>
